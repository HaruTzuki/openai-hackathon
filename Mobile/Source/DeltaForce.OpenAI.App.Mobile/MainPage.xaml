<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DeltaForce.OpenAI.App.Mobile.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Spacing="25" VerticalOptions="Center">

            <Button
                Clicked="OnTakePhotoClicked"
                HorizontalOptions="Center"
                Text="Take photo" />

            <Button
                Clicked="FromStorageClicked"
                HorizontalOptions="Center"
                Text="Upload a Photo" />

            <Image
                x:Name="UploadedOrSelectedImage"
                HeightRequest="300"
                HorizontalOptions="Center"/>

            <Button
                x:Name="BtnUploadThePhoto"
                Clicked="BtnUploadThePhoto_Clicked"
                HorizontalOptions="Center"
                Text="Send Photo" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
